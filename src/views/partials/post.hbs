<div class="flip flip-vertical">
    <div class="front">
        <img src="{{image}}" alt="image">
        <h1 class="text-shadow">Keyword: {{keyword}}</h1>
    </div>
    <div class="back">
        <h2>{{title}}</h2>
        <p>{{description}}</p>
        <a href="/posts/details/{{_id}}" class="details">Details</a>
    </div>
</div>